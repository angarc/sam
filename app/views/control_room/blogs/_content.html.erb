<div class='float-right'>
  <%= link_to fa_icon('cog'), control_room_blog_settings_path(@item), class: 'btn btn-circle btn-secondary btn-md' %>
  <% if element_model::EDITABLE %>
    <%= link_to fa_icon('edit'), {action: :edit, id: @item }, class: 'btn btn-circle btn-info btn-md' %>
  <% end %>

  <% if element_model::DELETEABLE %>
    <%= link_to fa_icon('trash'), {action: "destroy", id: @item }, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-circle btn-danger btn-md' %>
  <% end %>
</div>

<p class='lead'>Here are the posts you should work on...</p>

<% @posts.each do |post| %>
  <ul>
    <li><%= post.title.titleize %></li>
  </ul>
<% end %>