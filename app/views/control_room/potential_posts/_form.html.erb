<%= f.input :blog_id, as: :hidden, input_html: { value: @blog.id } %>

<div class='row'>
  <div class='col-lg-8'>
    <%= f.input :search_query %>
  </div>

  <div class='col-lg-2'>
    <%= f.input :competition, collection: PotentialPost.competitions.keys, label_method: -> (key){ key.titleize } %>
  </div>

  <div class='col-lg-2'>
    <%= f.input :will_create, collection: PotentialPost.will_creates.keys, label_method: -> (key){ key.titleize } %>
  </div>

  <div class='col-lg-12'>
    <%= f.input :notes %>
  </div>
</div>