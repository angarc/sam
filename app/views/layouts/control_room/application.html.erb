<!DOCTYPE html>
<html>
  <head>
    <title>Control Room</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id='page-top'>
    <div id="wrapper">
      <%= render partial: 'control_room/shared/sidebar' %>
      <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
          <%= render partial: 'control_room/shared/topbar'%>
          <div class="container-fluid">
            <%= yield %>
          </div>
        </div>
        <%= render partial: 'control_room/shared/footer' %>
      </div>
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>
  </body>
</html>
